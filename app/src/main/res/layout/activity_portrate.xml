    <LinearLayout
        android:visibility="gone"
        android:layout_margin="20dp"
        android:background="@drawable/musicborder"
        android:id="@+id/mytimer_layout"
        android:padding="30dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_choose_rec"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:textSize="12sp"
                android:text="Select video recording length"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <FrameLayout
                android:id="@+id/close_timer"
                android:background="@drawable/menubtnborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close" />

            </FrameLayout>
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt10sec"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="@color/redcolor"
                android:fontFamily="sans-serif-medium"
                android:textSize="17sp"
                android:text="10s"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/txt20sec"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:textSize="17sp"
                android:text="20s"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/txt30sec"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:textSize="17sp"
                android:text="30s"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/timer_ok"
                android:layout_gravity="center"
                android:padding="5dp"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:background="@drawable/recbtnborder"
                android:text="OK"
                android:layout_width="60dp"
                android:layout_height="30dp"/>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:visibility="gone"
        android:id="@+id/cancel_btn"
        android:padding="10dp"
        android:background="@drawable/recbtnborder"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"/>



    <ImageView
        android:visibility="gone"
        android:id="@+id/okbtn"
        android:padding="10dp"
        android:background="@drawable/recbtnborder"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_baseline_check_circle_24"
        android:layout_width="40dp"
        android:layout_height="40dp"/>


    <TextView
        android:drawableStart="@drawable/ic_music_small"
        android:gravity="center"
        android:textSize="12sp"
        android:id="@+id/music_txt"
        android:visibility="gone"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>

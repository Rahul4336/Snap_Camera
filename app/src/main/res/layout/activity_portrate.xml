<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <s.nap.PortraitFrameLayout
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:id="@+id/wrap_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <FrameLayout
        android:id="@+id/rec_layout"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_width="90dp"
        android:layout_height="90dp">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_rec"
            android:id="@+id/btn_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:indeterminate="false"
            android:max="100"
            android:progressDrawable="@drawable/circular"
            android:secondaryProgress="100" />

    </FrameLayout>

    <TextView
        android:visibility="gone"
        android:textSize="12sp"
        android:id="@+id/rec_done"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:padding="8dp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:background="@drawable/recbtnborder"
        android:text="COMPLETE VIDEO"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/slide_layout"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:background="@drawable/menubtnborder"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_switch_camera"
            android:id="@+id/btn_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:id="@+id/add_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_music" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:id="@+id/btn_flash_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_flash_off" />

            <ImageView
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:id="@+id/btn_flash_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_flash_on" />

        </FrameLayout>

        <ImageView
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_filter" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="gone"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:id="@+id/ic_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_timer" />
            <ImageView
                android:visibility="gone"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:id="@+id/ic_timer_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_timer_red" />
        </FrameLayout>




        <FrameLayout
            android:background="@drawable/menubtnborder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="invisible"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:id="@+id/arrow_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_up" />

            <ImageView
                android:layout_margin="5dp"
                android:padding="5dp"
                android:id="@+id/arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down" />

        </FrameLayout>


    </LinearLayout>

    <HorizontalScrollView
